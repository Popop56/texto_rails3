<tr id="comment_<%= comment.id %>">
	<td><%= comment.content %></td>
	<% if !comment.user.nil? %>
		<td><%= comment.user.email %></td>
	<%else%>
		<td>-</td>
	<%end%>
	<td><%= time_ago_in_words(comment.created_at) %></td>
	<td><%= link_to 'Destroy', admins_comment_path(comment), :confirm => 'Are you sure?', :method => :delete, :remote=>true %></td>
</tr>